{
  "name": "vibes-monorepo",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter ./apps/api/src/index.ts",
    "dev:api": "bun run --filter @vibes/api dev",
    "dev:tui": "bun run --filter @vibes/tui dev",
    "dev:demo": "bun run --filter @vibes/demo dev",
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter './packages/*' build",
    "build:apps": "bun run --filter './apps/*' build",
    "test": "bun run --filter './packages/*' test"
  },
  "devDependencies": {
    "bun-types": "latest",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3"
  },
  "private": true,
  "dependencies": {
    "dotenv-mono": "^1.5.1"
  }
}
