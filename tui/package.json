{
  "name": "@vibes/tui",
  "version": "1.0.0",
  "description": "Terminal User Interface for Vibes agent using Ink",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.0.0",
    "@ai-sdk/react": "^3.0.39",
    "@mishieck/ink-titled-box": "^0.3.0",
    "ai": "^6.0.37",
    "ink": "^4.4.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-link": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-task-list": "^2.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^17.0.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "deepagents": "*"
  }
}
